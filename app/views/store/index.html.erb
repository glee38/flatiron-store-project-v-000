<h4>Browse items by category:</h4>
<p>
<% @categories.each do |category| %>
  <%= link_to category.title, category_path(category) %> | 
<% end %>
</p>

<% @items.each do |item| %>
  <p><%= link_to item.title, item_path(item) %> | <%= number_to_currency(item.price/100) %> | <%= button_to'Add to Cart', line_items_path(item_id: item), method: "post" %></p>
<% end %>